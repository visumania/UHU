            android:text="x"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/productButton"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline3" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" android:background="#FF9800" android:textColor="#FFFFFF"/>
